{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Language Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "compile"],
      "options": {
        "cwd": "${workspaceFolder}/language-server"
      },
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Build VS Code Extension",
      "type": "shell",
      "command": "npm",
      "args": ["run", "compile"],
      "options": {
        "cwd": "${workspaceFolder}/vscode-extension"
      },
      "group": "build",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Watch Language Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "watch"],
      "options": {
        "cwd": "${workspaceFolder}/language-server"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Watch VS Code Extension",
      "type": "shell",
      "command": "npm",
      "args": ["run", "watch"],
      "options": {
        "cwd": "${workspaceFolder}/vscode-extension"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "Build All",
      "dependsOn": ["Build Language Server", "Build VS Code Extension"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Watch All",
      "dependsOn": ["Watch Language Server", "Watch VS Code Extension"]
    }
  ]
}
