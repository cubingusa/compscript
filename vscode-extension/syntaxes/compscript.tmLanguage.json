{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CompScript",
  "scopeName": "source.compscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#events" },
    { "include": "#attempt-results" },
    { "include": "#dates" },
    { "include": "#person-literals" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#keywords" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.compscript",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.compscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.compscript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.compscript",
          "match": "-?[0-9]+(\\.[0-9]+)?"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.compscript",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "events": {
      "patterns": [
        {
          "name": "constant.other.event.compscript",
          "match": "_[a-zA-Z0-9-]+"
        }
      ]
    },
    "attempt-results": {
      "patterns": [
        {
          "name": "constant.numeric.attempt-result.compscript",
          "match": "\\b[0-9][0-9\\.:]*[mps]\\b"
        },
        {
          "name": "constant.language.dnf-dns.compscript",
          "match": "\\b(DNF|DNS)\\b"
        }
      ]
    },
    "dates": {
      "patterns": [
        {
          "name": "constant.numeric.datetime.compscript",
          "match": "\\b[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}(:[0-9]{2})?\\b"
        },
        {
          "name": "constant.numeric.date.compscript",
          "match": "\\b[0-9]{4}-[0-9]{2}-[0-9]{2}\\b"
        }
      ]
    },
    "person-literals": {
      "patterns": [
        {
          "name": "constant.other.person.wca-id.compscript",
          "match": "\\b[0-9]{4}[A-Z]{4}[0-9]{2}\\b"
        },
        {
          "name": "constant.other.person.user-id.compscript",
          "match": "\\bp[0-9]+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.compscript",
          "match": "\\b[A-Z][a-zA-Z0-9]*(?=\\s*(<[^>]+>)?\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.compscript",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.compscript",
          "match": "(&&|\\|\\|)"
        },
        {
          "name": "keyword.operator.arithmetic.compscript",
          "match": "(\\+|-|\\*|/)"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.compscript",
          "match": "\\b(Define)\\b"
        }
      ]
    }
  }
}
